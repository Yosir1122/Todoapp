<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D93BC9"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Add Todo"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>
    <EditText
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edt_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:id="@+id/edt_name"
        android:textColor="@color/black"
        android:hint="Todo Name"
        android:textColorHint="#ABA8A8"/>
    <EditText
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edt_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:id="@+id/description"
        android:textColor="@color/black"
        android:hint="To do description"
        android:textColorHint="#ABA8A8"/>
    <Spinner
        android:id="@+id/my_spinner"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/edt_style"/>
    <EditText
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edt_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:id="@+id/data"
        android:textColor="@color/black"
        android:hint="To do create data"
        android:textColorHint="#ABA8A8"/>
    <EditText
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edt_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:id="@+id/dedline"
        android:textColor="@color/black"
        android:hint="To do dedline"
        android:textColorHint="#ABA8A8"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="120dp"
        android:id="@+id/save"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:cornerRadius="10dp"
        android:layout_margin="30dp"
        android:layout_gravity="end"
        android:text="Save"
        android:textSize="20sp"
        android:padding="10dp"
        android:backgroundTint="#D93BC9"/>

</LinearLayout>